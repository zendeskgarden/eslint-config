{
  "name": "@zendeskgarden/eslint-config",
  "description": "Garden ESLint config",
  "license": "Apache-2.0",
  "author": "Zendesk Garden <garden@zendesk.com>",
  "repository": "https://github.com/zendeskgarden/eslint-config",
  "bugs": {
    "url": "https://github.com/zendeskgarden/eslint-config/issues"
  },
  "version": "4.1.0",
  "main": "index.js",
  "files": [
    "rules"
  ],
  "scripts": {
    "format": "prettier-package-json --write",
    "lint": "eslint index.js plugins/*.js rules/*.js",
    "tag": "[ `git rev-parse --abbrev-ref HEAD` = 'master' ] && standard-version --no-verify",
    "test": "yarn lint && yarn format && git diff --quiet"
  },
  "peerDependencies": {
    "babel-eslint": "^8.x",
    "eslint": "^4.18.x"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.2",
    "eslint": "^4.18.2",
    "eslint-plugin-notice": "^0.6.6",
    "husky": "^0.15.0-rc.8",
    "prettier-package-json": "^1.5.1",
    "standard-version": "^4.3.0"
  },
  "keywords": [
    "eslint",
    "garden",
    "zendesk"
  ],
  "publishConfig": {
    "access": "public"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && yarn format",
      "post-checkout": "if [[ $GIT_PARAMS == *1 ]]; then yarn --ignore-scripts --pure-lockfile; fi",
      "post-merge": "yarn --ignore-scripts --pure-lockfile"
    }
  }
}
